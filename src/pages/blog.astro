---
import { getCollection } from "astro:content";
import Layout from "@/layouts/Layout.astro";

const posts = await getCollection("blog");
---

<Layout title="Blog - Bo Yang">
  <main class="mx-auto max-w-4xl p-8">
    <nav class="mb-8 flex gap-4 text-sm">
      <a href="/" class="text-skin-hue hover:underline">‚Üê Home</a>
    </nav>

    <h1 class="mb-8 text-4xl font-bold"></h1>
    {
      posts.map((post) => (
        <article class="mb-6">
          <h2 class="text-2xl font-bold">
            <a href={`/blog/${post.slug}`} class="hover:text-skin-hue">
              {post.data.title}
            </a>
          </h2>
          <p class="text-sm text-gray-600">
            {post.data.date.toLocaleDateString()}
          </p>
          <p class="text-sm text-skin-muted">{post.data.description}</p>
        </article>
      ))
    }
  </main>
</Layout>
