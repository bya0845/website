---
import { getCollection } from "astro:content";
import Layout from "@/layouts/Layout.astro";

const posts = (await getCollection("blog")).sort(
  (a, b) => b.data.date.valueOf() - a.data.date.valueOf()
);
---

<Layout title="Bo's Blog">
  <main class="mx-auto max-w-4xl p-8">
    <h1 class="mb-8 text-4xl font-bold text-skin-base">Blog</h1>
    {
      posts.map((post) => (
        <article class="mb-10">
          <h2 class="text-2xl font-bold">
            <a href={`/blog/${post.slug}`} class="hover:text-skin-hue transition-colors">
              {post.data.title}
            </a>
          </h2>

          <p class="text-sm text-gray-500">
            {post.data.date.toLocaleDateString('en-US', {
              year: 'numeric',
              month: 'long',
              day: 'numeric',
              timeZone: 'UTC'
            })}
          </p>

          {/* Added mt-3 for space and italic for the synopsis */}
          <p class="mt-3 text-sm text-skin-muted italic leading-relaxed">
            {post.data.description}
          </p>
        </article>
      ))
    }
  </main>
</Layout>